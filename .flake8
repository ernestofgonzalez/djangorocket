[flake8]
exclude =
    .git,
    .gitignore,
    .mypy_cache,
    .pytest_cache,
    *.pot,
    *.py[co],
    __pycache__,
    venv,
    env,
    .env,
    docs,
    */migrations/*,
    manage.py
max-line-length = 88
max-complexity = 18
select = B,C,E,F,W,T4,B9
ignore = E203, E266, E501, W503, F403, F401